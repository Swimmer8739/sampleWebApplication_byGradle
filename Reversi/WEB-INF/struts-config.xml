<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- ================================================ Form Bean Definitions -->

	<form-beans>
		<form-bean name="LoginForm" type="action.form.LoginForm"></form-bean>
		<form-bean name="GameSetUpForm" type="action.form.GameSetUpForm"></form-bean>
		<form-bean name="BattleForm" type="action.form.BattleForm"></form-bean>

	</form-beans>


	<!-- ========================================= Global Exception Definitions -->

	<global-exceptions>

	</global-exceptions>


	<!-- =========================================== Global Forward Definitions -->

	<global-forwards>
		<forward name="welcome" path="/Welcome.do" />
	</global-forwards>


	<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>
		<action
		path="/Welcome"
		forward="/pages/Who.jsp"
		>
		</action>

		<action
		path="/logout"
		forward="/pages/Who.jsp"
		>
		</action>

		<action
		path="/login"
		type="action.LoginAction"
		name="LoginForm"
		scope="session"
		validate="true"
		input="/pages/Who.jsp"
		>
			<forward name="success" path="/pages/Profile.jsp" />
		</action>

		<action
		path="/gamesetup"
		forward="/pages/GameSetUp.jsp"
		>
		</action>

		<action
		path="/gamestart"
		type="action.GameStartAction"
		name="GameSetUpForm"
		scope="session"
		validate="false"
		forward="/pages/Battle.jsp"
		>
		</action>

		<action
		path="/battle"
		type="action.BattleAction"
		name="CommandForm"
		scope="session"
		validate="false"
		forward="/pages/Battle.jsp"
		>
		</action>

	</action-mappings>


	<!-- ======================================== Message Resources Definitions -->

	<message-resources parameter="java.MessageResources" />

	<!-- =============================================== Plug Ins Configuration -->

	<!-- ======================================================= Tiles plugin -->

	<!-- =================================================== Validator plugin -->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml" />
	</plug-in>

</struts-config>

